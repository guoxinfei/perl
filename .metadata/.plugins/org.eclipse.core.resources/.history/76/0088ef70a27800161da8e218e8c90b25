use strict;
use warnings;

use Data::Dumper;

$| = 1;

sub main {
	my $input = 'test.csv';
	unless ( open( INPUT, $input ) ) {
		die "\nCan't open $input\n";
	}

	<INPUT>;    #read off the header

	my @data;

	my $count = 0;
	
	while ( my $line = <INPUT> ) {

		chomp $line;


		my @values = split /\s*,\s*/, $line;
		
		my %values = (
			"Name" => "";
			"Payment" => "";
		
		);

		push @data, \@values;

	}

	close INPUT;
	
	foreach my $line (@data) {
		print Dumper($line);
	}
}

main();
