use strict;
use warnings;

use Data::Dumper;

$| = 1;

sub main {
	my $input = 'test.csv';
	unless ( open( INPUT, $input ) ) {
		die "\nCan't open $input\n";
	}
	
	<INPUT>; #read off the header
	
	while(my $line = <INPUT>){
		
		my @values = split ',',$line;
		
		print join '|', @values;
	}

	close INPUT;
}

main();
